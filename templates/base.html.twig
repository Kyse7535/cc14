<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <!-- Container wrapper -->
        <div class="container">
            <!-- Navbar brand -->
            <a class="navbar-brand text-white" href="/activite">
                Accueil
            </a>



            <!-- Collapsible wrapper -->
            <div class="collapse navbar-collapse" id="navbarButtonsExample">
                <!-- Left links -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {% if app.session.get('connected') == 'true' %}
                    <li class="nav-item ">
                        <a class="nav-link text-white" href="{{ path('mes_activites') }}">Mes activites</a>
                    </li>
                    {% endif %}
                    {% if app.session.get('isAdmin') == 'true' %}
                    <li class="nav-item ">
                        <a class="nav-link text-white" href="{{ path('user_index') }}">Users</a>
                    </li>
                    {% endif %}
                </ul>
                <!-- Left links -->

                <div class="d-flex align-items-center">
                    {% if app.session.get('connected') == 'false' %}
                    <a href="{{path('app_login') }}" class="btn btn-info">
                        Login
                    </a>
                    {% else %}
                        <a href="{{ path('app_logout') }}" class="btn btn-danger">
                            Logout
                             </a>
                    {% endif %}
                </div>
            </div>
            <!-- Collapsible wrapper -->
        </div>
        <!-- Container wrapper -->
    </nav>
    <!-- Navbar -->
        {% block body %}

            {% for message in app.flashes('edit_success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% endblock %}
    </body>
</html>
