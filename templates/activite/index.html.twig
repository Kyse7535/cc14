{% extends 'base.html.twig' %}

{% block title %}Activites{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {% for message in app.session.getFlashBag.get('create_success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.session.getFlashBag.get('delete_success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.session.getFlashBag.get('modify_success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.session.getFlashBag.get('inscription_success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.session.getFlashBag.get('desinscription') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <h1 class="text-center m-2">Activit√©s</h1>

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody >
        {% for activite in activites %}
            <tr>
                <td>{{ activite.id }}</td>
                <td>{{ activite.nom }}</td>
                <td class="w-75">{{ activite.description | raw }}</td>
                <td>
                    <a href="{{ path('activite_show', {'id': activite.id}) }}">show</a>
                    {% if userConnectedIsAnimateur and app.session.get('connected') == 'true' %}
                    <a href="{{ path('activite_edit', {'id': activite.id}) }}">edit</a>

                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if not(app.session.get('isEnfant'))  %}
        <div class="d-flex justify-content-center w-100 mb-3">
            <a href="{{ path('activite_new') }}" class="btn btn-primary">Create new</a>
        </div>


    {% endif %}
{% endblock %}
